<!-- res/drawable/rounded_button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 버튼 내부 배경 색상 (흰색) -->
    <solid android:color="@android:color/white" />

    <!-- 테두리 두께와 색상 (2dp, 검정) -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

    <!-- 모서리를 둥글게 (16dp) -->
    <corners android:radius="16dp" />

    <!-- 내부 패딩 (세로길이를 줄이려면 축소) -->
    <padding
        android:left="8dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="4dp" />
</shape>
